include includes/nav.pug
.content-wrapper
	.container-fluid
		// Breadcrumbs
		ol.breadcrumb
			li.breadcrumb-item
				a(href='/admin/dashboard') Dashboard
			li.breadcrumb-item.active Message All Doctors

		// Doctors
		.card.mb-3
			.card-header
				h3
					i.fa.fa-table
					|   Message All Doctors
			.card-body.row
				.col-md-6.offset-md-3
					if (error)
						.alert.alert-danger=error
					if (success)
						.alert.alert-success=success

					if (adminPriviledge && adminPriviledge >1)
						form(method="POST")
							.form-group
								label.form-control-label Notification Title
								input.form-control(type="text", name="title",required)
							.form-group
								label.form-control-label Message Body
								textarea.form-control(name="message",required)
							.text-center
								button.btn.btn-primary.btn-lg Send

// <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
