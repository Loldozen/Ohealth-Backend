<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="/public/css/bootstrap-grid.css">
        <link rel="stylesheet" href="/public/css/bootstrap.min.css">
        <link rel="stylesheet" href="/public/css/loginstyle.css">
        <link rel=icon href="/public/images/favicon.png" sizes="16x16" type="image/png">

        <title>Laboratory Signup</title>
    </head>

    <body>
        <div class="hospital-signup">
            <form method="POST" action="/laboratory/register">
                <div class="row">
                    <div class="form-container col-lg-12">
                        <img src="/public/images/logo8.png" alt="ohealth-logo" class="ohealthLogo" />
                    </div>
                    <div class="form-container col-lg-12">
                        <h3>Signup For Covid Laboratory Testing</h3>
                        <p>Register to conduct covid lab test for patients</p>
                        <% if(error != ""){%>
                        <div class="errormsg">
                            <% for(var i=0; i < error.length; i++) {%>
                            <div>
                                <%=error[i].msg%>
                            </div>
                            <% } %>
                        </div>
                        <%} else{%>
                        <% } %>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input type="text" name="name" id="" placeholder="Name of Laboratory*" class="form-control"
                                required>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input type="email" name="email" id="" placeholder="Email Address*" class="form-control"
                                required>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input type="text" name="phoneNumber" id="" placeholder="Phone Number*" class="form-control"
                                required>
                        </div>
                    </div>
                    <!-- <div class="col-12">
                    <div class="form-group">
                        <input type="text" name="address" id="Address" placeholder="Address*" class="form-control" required>
                    </div>
                </div>  -->
                    <div class="col-12">
                        <div class="form-group">
                            <input type="password" name="password" id="" placeholder="Password*" class="form-control"
                                required>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input type="password" name="cpassword" id="" placeholder="Confrim Password*"
                                class="form-control" required>
                        </div>
                    </div>
                    <!-- <div class="col-12">
                    <div class="form-group">
                        <input type="checkbox" name="terms" class="checkbox"> I have agreed to the <span>terms &
                            conditions</span>
                    </div>
                </div> -->
                    <div class="col-lg-12 have-account">
                        <p>Already have an account? <span> <a href="/laboratory/login">Login</a> </span></p>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <button type="submit" class="hospital-btn">Register</button>
                        </div>
                    </div>
            </form>
        </div>
    </body>

</html>